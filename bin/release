#!/bin/sh
BUILD_DIR=$1
appn=`cat "$BUILD_DIR/heroku.txt" | cut -d ' ' -f1`

cat << EOF
---
config_vars:
   TOOLATRA_FORCEDPORT: $PORT
   PATH: /app/.buildpack/tclsh/final/bin:/usr/bin:/bin:/usr/local/bin:/usr/sbin
default_process_types:
   web: sh -c "LD_LIBRARY_PATH=/app/.buildpack/tclsh/final/lib /app/.buildpack/tclsh/final/bin/tclsh $appn"
EOF
